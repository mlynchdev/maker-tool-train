{
  "name": "training-reservation-system",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --cwd apps/web dev",
    "build": "bun run --cwd apps/web build",
    "typecheck": "bunx tsc --noEmit -p apps/web/tsconfig.json",
    "start": "bun run --cwd apps/web start",
    "db:generate": "bun run --cwd apps/web drizzle-kit generate",
    "db:migrate": "bun run --cwd apps/web drizzle-kit migrate",
    "db:push": "bun run --cwd apps/web drizzle-kit push",
    "db:studio": "bun run --cwd apps/web drizzle-kit studio",
    "test:unit": "bun run --cwd apps/web test:unit",
    "test": "bun run test:unit"
  }
}
